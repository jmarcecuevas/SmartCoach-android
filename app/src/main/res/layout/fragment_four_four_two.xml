<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/field"/>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp">

        <RelativeLayout
            app:layout_widthPercent="100%"
            app:layout_heightPercent="23%"
            android:id="@+id/goalkeeper_container">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:id="@+id/first"
                android:src="@drawable/sergio_romero"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            app:layout_widthPercent="100%"
            app:layout_heightPercent="15%"
            android:layout_below="@+id/goalkeeper_container"
            android:id="@+id/defenders_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:id="@+id/second"
                    android:src="@drawable/gabriel_mercado"
                    android:layout_gravity="bottom"
                    android:layout_centerHorizontal="true"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:id="@+id/third"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/nicolas_otamendi"
                    android:layout_gravity="bottom"
                    android:layout_centerHorizontal="true"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:id="@+id/fourth"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/javier_mascherano"
                    android:layout_gravity="bottom"
                    android:layout_centerHorizontal="true"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:id="@+id/fifth"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/augusto_fernandez"
                    android:layout_gravity="bottom"
                    android:layout_centerHorizontal="true"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            app:layout_widthPercent="100%"
            app:layout_heightPercent="18%"
            android:id="@+id/midfielders_container"
            android:layout_below="@+id/defenders_container"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/sixth"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="bottom"
                    android:src="@drawable/angel_dimaria" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:id="@+id/seventh"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ever_banega"
                    android:layout_gravity="bottom"
                    android:layout_centerHorizontal="true"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:id="@+id/eighth"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/fernando_gago"
                    android:layout_gravity="bottom"
                    android:layout_centerHorizontal="true"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:id="@+id/nineth"
                    android:src="@drawable/paulo_dybala"
                    android:layout_gravity="bottom"
                    android:layout_centerHorizontal="true"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            app:layout_widthPercent="100%"
            app:layout_heightPercent="25%"
            android:layout_below="@+id/midfielders_container"
            android:id="@+id/forwards_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:id="@+id/tenth"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/lionel_messi"
                    android:layout_gravity="bottom"
                    android:layout_centerHorizontal="true"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/eleventh"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="bottom"
                    android:src="@drawable/dario_benedetto" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.percent.PercentRelativeLayout>



</RelativeLayout>